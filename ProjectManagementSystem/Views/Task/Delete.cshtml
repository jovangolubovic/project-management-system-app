@model ProjectManagementSystem.Models.DomainModels.ProjectTask


<form asp-action="DeletePost" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Task</h2>
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-6">
                            <label asp-for="Name"></label>
                        </div>
                        <div class="col-6">
                            <label asp-for="Id"> </label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-6">
                            <input asp-for="Name" disabled class="form-control" />

                        </div>
                        <div class="col-6">
                            <input asp-for="Id" disabled class="form-control" />

                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">

                                <input type="submit" class="btn btn-danger w-75" value="Delete" />

                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success">Back to tasks</a>
                            </div>

                        </div>

                    </div>
                </div>

            </div>

        </div>









    </div>

</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
