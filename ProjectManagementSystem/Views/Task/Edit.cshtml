@model ProjectManagementSystem.Models.ViewModels.AccountViewModels.TaskViewModel
@if (User.IsInRole(ProjectManagementSystem.Helper.Helper.Admin))
{
    <h2>Edit this Task</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                <input asp-for="Id" hidden />
                <div asp-validation-summary="All" class="text-danger"></div>
                @if (TempData["ErrorMessageForDeveloperTasks"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessageForDeveloperTasks"]</div>
                    TempData["ErrorMessageForDeveloperTasks"] = null; // set error message to null
                }
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <label asp-for="Name" class="control-label">Edit name of the Task</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Description" class="form-control" placeholder="Name" />
                    <label asp-for="Description" class="control-label"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    @Html.DropDownList("managerId", new SelectList(ViewBag.ManagerList, "Id", "Fullname", ViewBag.ProjectManagerId), "Select Project Manager", new { @class = "form-control select2" })
                    <label asp-for="ManagerId">Open this menu to select Project Manager</label>
                    <span asp-validation-for="ManagerId" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    @Html.DropDownList("developerId", new SelectList(ViewBag.DeveloperList, "Id", "Fullname", ViewBag.ProjectManagerId), "Select Developer", new { @class = "form-control select2" })
                    <label asp-for="DeveloperId" class="control-label">Open this menu to select Developer</label>
                    <span asp-validation-for="DeveloperId" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Progress" class="form-control" placeholder="Name" />
                    <label asp-for="Progress" class="control-label"></label>
                    <span asp-validation-for="Progress" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Deadline" class="form-control" placeholder="Name" />
                    <label asp-for="Deadline" class="control-label"></label>
                    <span asp-validation-for="Deadline" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Edit" class="w-100 btn btn-lg btn-primary mb-3" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}
