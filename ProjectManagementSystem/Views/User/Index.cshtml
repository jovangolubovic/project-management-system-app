@model IEnumerable<ProjectManagementSystem.Models.ViewModels.UserViewModel>

@if (User.IsInRole(ProjectManagementSystem.Helper.Helper.Admin))
{
    <h2>List of Users</h2>
    <hr />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style=" width: 100%">
            <thead>
                <tr>
                    <th>
                        User
                    </th>
                    <th>
                        Role
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.Fullname</td>
                        <td width="30%">@item.RoleName</td>
                        @if (User.IsInRole(ProjectManagementSystem.Helper.Helper.Admin))
                        {
                            <td width="40%">
                                <div class="col-6 text-right role="group">
                                    <a asp-controller="User" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary"> Edit</a>
                                    <a asp-controller="User" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger"> Delete</a>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
}